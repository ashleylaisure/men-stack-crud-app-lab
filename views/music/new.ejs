<!-- views/music/new.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/style.css" />
        <title>Add New Music</title>
    </head>

    <body>
        <h1>ADD NEW MUSIC!</h1>

        <form action="/music" method="POST">

            <div class="form-inputs">
                <label for="artist">Artist:</label>
                <input type="text" class="input-field" name="artist" id="artist"/>
            </div>

            <div class="form-inputs">
                <label for="song">Song:</label>
                <input type="text" class="input-field" name="song" id="song"/>
            </div>

            <div class="form-inputs">
                <label for="genre">Genre:</label>
                <select name="genre" class="input-field" id="genre" >
                    <option value="hipHop">Hip-Hop</option>
                    <option value="rap">Rap</option>
                    <option value="rock">Rock</option>
                    <option value="country">Country</option>
                    <option value="electronic">Electronic</option>
                    <option value="latin">Latin</option>
                    <option value="kpop">K-pop</option>
                    <option value="rnb">R&B</option>
                    <option value="indie">Indie</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <div class="form-inputs">
                <label for="feeling">I Listen to this when I'm feeling:</label>
                <select name="feeling" class="input-field" id="feeling" >
                    <option value="groovy">Groovy</option>
                    <option value="silly">Silly</option>
                    <option value="sexy">Sexy</option>
                    <option value="angry">Angry</option>
                    <option value="motivated">Motivated</option>
                    <option value="blue">Blue</option>
                    <option value="hopeful">Hopeful</option>
                    <option value="crushed">Crushed</option>
                    <option value="fisty">Fisty</option>
                    <option value="undefinable">Undefinable</option>
                </select>
            </div>

            <button type="submit">Add Music</button>

        </form>

        <a class="music-index-link" href="/music">
            <div class="music-index-text">Back to Playlist</div>
        </a>
    </body>  
    
</html>
