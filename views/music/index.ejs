<!-- views/music/index.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/style.css" />
        <title>Music Playlist</title>
    </head>
    <body>
        <div class="index-header">
            <h1>Music Playlist</h1>
        </div>

        <ul>
            <% music.forEach(music => { %>
                <li>
                    <a class="music-cards" href="/music/<%=music._id %>"><%=music.song%></a>
                </li>
            <% }); %>
        </ul>

        <a class="add-music" href="/music/new">And Music</a>
    </body>
</html>
